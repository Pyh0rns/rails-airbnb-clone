  <%= simple_form_for @studio do |f| %>
    <%= f.input :title %>
    <%= f.input :description, input_html: {class:"input"} %>
    <%= f.input :address,
        input_html: { data: { geocoder_target: "address" }, class: "d-none" },
        wrapper_html: { data: { controller: "geocoder", geocoder_api_key_value: ENV['MAPBOX_API_KEY'] } } %>
    <%= f.input :price %>
    <%= f.input :photos, as: :file, input_html: { multiple: true }%>
    <%= f.input :available %>
    <%= f.button :submit, class: "btn btn-blue"%>
  <% end %>
